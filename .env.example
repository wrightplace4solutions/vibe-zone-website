# Zapier Webhook URL for booking form submissions
VITE_ZAP_CATCH_HOOK=https://hooks.zapier.com/hooks/catch/YOUR_ID/YOUR_HOOK

# Stripe API Keys (Get from https://dashboard.stripe.com/apikeys)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY

# Stripe Payment Links (Optional - for fallback)
VITE_STRIPE_LINK_OPTION1=https://buy.stripe.com/YOUR_OPTION1_LINK
VITE_STRIPE_LINK_OPTION2=https://buy.stripe.com/YOUR_OPTION2_LINK

# Cash App Payment Links
VITE_CASHAPP_LINK_OPTION1=https://cash.app/$YOURCASHTAG/100
VITE_CASHAPP_LINK_OPTION2=https://cash.app/$YOURCASHTAG/150

# Zelle Information
VITE_ZELLE_EMAIL=your-zelle@email.com
VITE_ZELLE_PHONE=(555) 123-4567

# Supabase (required for local & external hosting)
VITE_SUPABASE_URL=https://<project-ref>.supabase.co
VITE_SUPABASE_ANON_KEY=<anon-key>
# If you prefer publishable naming keep one (client.ts falls back automatically)
# VITE_SUPABASE_PUBLISHABLE_KEY=<anon-key-duplicate>
VITE_SUPABASE_PROJECT_ID=<project-ref>

# Public site canonical URL
VITE_PUBLIC_SITE_URL=https://vzentertainment.fun

# Google Calendar API Credentials (Get from Google Cloud Console)
GOOGLE_CALENDAR_CLIENT_ID=YOUR_CLIENT_ID.apps.googleusercontent.com
GOOGLE_CALENDAR_CLIENT_SECRET=YOUR_CLIENT_SECRET
GOOGLE_CALENDAR_REFRESH_TOKEN=YOUR_REFRESH_TOKEN

# Optional feature flags
# VITE_CHAT_ENABLED=true

